<% @furnitures.each do |furniture| %>


  
<% if furniture.subcategory === 'Furnitures' %>
  <td><%= furniture.title %></td>
  <td><%= furniture.price %></td>
   <td><%= furniture.text %></td>
   <td><%= furniture.phone_no %></td>
    <td><%= furniture.email %></td>
   <p>
      <b>Image:</b>
      <%= image_tag furniture.recipe_image.url %>
  </p>
<%  end %>

<%  end %>
    
